<h1>Message</h1>

<%= current_user.errors.full_messages.join(', ') %>
<%= form_for [current_user, @message] do |f| %>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.text_field :amount, class: 'form-control' %>
  </div>
  <div class="field">
      <%= f.label :contacts %>
      <%= select_tag("user[user_id]", options_from_collection_for_select(User.all, 'id', 'first_name')) %>
  </div>
  <%= f.submit 'Pay', class: 'btn btn-primary' %>
  <%= console %>
<% end %>
